#include <iostream>
#include <cmath>
using namespace std;
int main()
{
double ounces = 0.0;
double tons = 0.0;
int boxes = 0;
cout << "Enter the Weight of a Package of breakfast cereal" << endl;
cin >> ounces;
tons = ounces *35273.92;
boxes = ounces/35273.92;
cout << "There are " << tons<< "tons." << endl;
cout << "There are " << boxes<< "boxes." << endl;
return 0;
}
